<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. TOP BAR -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBarDashboard"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"

        app:title="@string/dashboard"
        app:titleTextColor="@android:color/white"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:menu="@menu/menu_dashboard_top" />


    <!-- 2. MAIN CONTENT CONTAINER -->
    <LinearLayout
        android:id="@+id/main_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBarDashboard"
        android:layout_above="@id/dashboard_bottom_nav"
        android:orientation="vertical">

        <!-- SEARCH BAR -->
        <SearchView
            android:id="@+id/searchCrimes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:iconifiedByDefault="false"
            android:queryHint="Search Crimes..." />

        <!-- CRIME TABLE (Restricted Height) -->
        <!-- We limit height to 250dp so the map has space below -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#F5F5F5"
            android:scrollbars="horizontal">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

                <TableLayout
                    android:id="@+id/crimeTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />
            </ScrollView>
        </HorizontalScrollView>

        <!-- MAP FRAGMENT (Replaces the empty div) -->
        <!-- layout_weight="1" makes it fill all remaining vertical space -->
        <fragment
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
    <!-- 2. ADMIN VIEW CONTAINER -->
    <!-- This is where AdminFragment will be loaded -->
    <FrameLayout
        android:id="@+id/dashboard_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone"
        android:layout_below="@id/topBarDashboard"
        android:layout_above="@id/dashboard_bottom_nav"/>

    <!-- 3. BOTTOM NAV -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/dashboard_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_menu" />

    <!-- ADD THIS AT THE BOTTOM, just before the closing </RelativeLayout> tag -->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:elevation="10dp" />

</RelativeLayout>
